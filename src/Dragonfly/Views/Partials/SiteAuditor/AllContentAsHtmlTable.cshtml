@using System.Web.Mvc.Html
@using Dragonfly.SiteAuditorHelpers
@using Umbraco.Web
@model IEnumerable<Dragonfly.SiteAuditorModels.AuditableContent>

@{
    //TODO: Finish this

    var fancyFormat = true;
    var propertyAlias = Dragonfly.Umbraco7Helpers.Mvc.GetSafeViewDataString(ViewData, "PropertyAlias");
    var includeUnpublished = Dragonfly.Umbraco7Helpers.Mvc.GetSafeViewDataBool(ViewData, "IncludeUnpublished");

    var counter = 0;
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" />

    @*<style>
            {

            }
        </style>*@
    @*<!--<script src="/scripts/snippet-javascript-console.min.js?v=1"></script>-->*@
</head>
<body>
    <div class="container">
    @if (fancyFormat)
    {
        <h1>All Content</h1>
        <p>Total Nodes Returned: @Model.Count()</p>
    }
        <table id="umbracodata" class="table table-striped table-bordered table-hover table-sm" cellspacing="0" style="width:100%">
            <thead>
                <tr>
                    @if (fancyFormat)
                    {
                        <th>#</th>
                        <th>Actions</th>
                    }
                    <th>Node Name</th>
                    <th>NodeID</th>
                    <th>Node Path</th>
                    <th>DocType</th>
                    <th>ParentID</th>
                    <th>Full URL</th>
                    <th>Level</th>
                    <th>Sort Order</th>
                    <th>Template Name</th>
                    <th>Create Date</th>
                    <th>Update Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var node in Model)
                {
                    counter++;
                    var dtInfo = AuditHelper.GetPropertyDataTypeInfo(propertyAlias, node.UmbPublishedNode);

                    <tr>
                        @if (fancyFormat)
                        {
                            // #
                            <td>@counter</td>

                            //Actions
                            <td>
                                @{ Html.RenderPartial("/Views/Partials/SiteAuditor/DataFormats/NodeActions.cshtml", node.UmbPublishedNode); }
                            </td>
                        }

                        @*//DocType*@
                        <td>@{Html.RenderPartial("/Views/Partials/SiteAuditor/DataFormats/DocTypeInfo.cshtml", dtInfo);}</td>

                        @*//PropertyAlias Type*@
                        <td>@{Html.RenderPartial("/Views/Partials/SiteAuditor/DataFormats/PropertyTypeInfo.cshtml", dtInfo);}</td>

                        @*//Node ID*@
                        <td>@node.UmbContentNode.Id</td>

                        @*//Node Name*@
                        <td>@node.UmbContentNode.Name</td>

                        @*//PropertyAlias Value*@
                        @if (dtInfo.DataType != null)
                        {
                            <td>@{ Html.RenderPartial("/Views/Partials/SiteAuditor/DataFormats/PropertyDataValue.cshtml", dtInfo);}</td>
                        }
                        else
                        {
                            var propVal = node.UmbPublishedNode.GetPropertyValue<string>(propertyAlias);
                            <td>@propVal</td>
                        }

                        @*//Date Last Updated*@
                            <td>@{ Html.RenderPartial("/Views/Partials/SiteAuditor/DataFormats/DateValue.cshtml", node.UmbContentNode.UpdateDate);}</td>

                    </tr>
                }

            </tbody>
        </table>

    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.12/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#umbracodata').DataTable();
            @*//$('#umbracodata').dataTable( {
            //    "columns": [
            //    { "width": "20%" },
            //    null,
            //    null,
            //    null,
            //    null
            //        ]
            //} );*@
        });
    </script>
</body>
</html>